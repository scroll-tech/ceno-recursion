def main(
    ZKVMVerifier self,
    field[0] name,
    VerifyingKey circuit_vk,
    ZKVMOpcodeProof proof,
    Transcript t,
    u32 num_product_fanin,
    PointAndEval out_evals,
    ExtField[2] challenges // derive challenge from PCS
) -> field:
    ExtField[0] result = verify_opcode_proof(
        self,
        name,
        circuit_vk,
        proof,
        t,
        num_product_fanin,
        out_evals,
        challenges // derive challenge from PCS
    )
    return result[0].b0